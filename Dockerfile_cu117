# Step 1: Use a base image with CUDA 11.7 support
FROM nvidia/cuda:11.7.1-base-ubuntu22.04

# Step 2: Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    PYTHONUNBUFFERED=1

# Step 3: Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    libgl1-mesa-glx \
    libglib2.0-0 \
    wget \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Step 4: Upgrade pip and install Jupyter Notebook
RUN pip install --upgrade pip setuptools wheel \
    && pip install jupyterlab notebook

# Step 5: Install TensorFlow 2.10.0 with GPU support
RUN pip install tensorflow==2.10.0

# Step 6: Install PyTorch 2.0.0 with CUDA 11.7 support
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu117

# Install gymnasium (gym deprecated)
RUN pip install --no-cache-dir gymnasium

# Step 7: Install Ray 2.35.0 with CUDA 11.7 support
RUN pip install ray[rllib]==2.35.0

# Install NumPy (compatible with TensorFlow, PyTorch, and Ray)
RUN pip install numpy==1.23.5

USER root

# Step 8: Create a workspace directory
RUN mkdir -p /workspace/code && chmod -R 777 /workspace
WORKDIR /workspace/code

# Step 9: Expose the Jupyter Notebook port
EXPOSE 8888

# Step 10: Define the default command to start Jupyter Notebook
CMD ["jupyter", "notebook", "--ip=0.0.0.0", "--port=8888", "--allow-root", "--no-browser"]
